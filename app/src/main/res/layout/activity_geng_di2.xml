<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_geng_di2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#aaeeaa"
    tools:context="com.example.lenovo.myapp67.GengDi2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ccffcc">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/apple_red"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:id="@+id/pingguo"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="红苹果"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"

                android:layout_toEndOf="@+id/pingguo"
                android:layout_marginTop="30dp"
                android:id="@+id/textView" />

            <TextView
                android:text="面积12亩"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:id="@+id/textView7"
                android:layout_alignTop="@+id/textView" />

            <Button
                android:text="详细信息"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/btn_pingguo" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#bbffbb">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/chinese_goosebeery"

                android:id="@+id/mihoutao"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="猕猴桃"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_toEndOf="@+id/mihoutao"
                android:layout_marginTop="30dp"
                android:id="@+id/textView3" />
            <TextView
                android:text="面积6.3亩"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:id="@+id/textView8"
                android:layout_alignTop="@+id/textView3" />

            <Button
                android:text="详细信息"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:id="@+id/btn_mihoutao"
                android:layout_below="@+id/textView8"
                android:layout_alignParentStart="true"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="15dp"/>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#ccffbb">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/hami_melon"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/hamigua"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="哈密瓜"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/hamigua"
                android:layout_toEndOf="@+id/hamigua"

                android:layout_marginStart="12dp"
                android:layout_marginTop="30dp"
                android:id="@+id/textView4" />
            <TextView
                android:text="面积2.6亩"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:id="@+id/textView9"
                android:layout_alignTop="@+id/textView4" />

            <Button
                android:text="详细信息"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:id="@+id/btn_hamigua"
                android:layout_below="@+id/textView9"
                android:layout_alignParentStart="true"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#bbffcc">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/orange"
                android:id="@+id/chengzi"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="甜橙子"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/chengzi"
                android:layout_marginTop="30dp"
                android:id="@+id/textView5" />
            <TextView
                android:text="面积8.8亩"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:id="@+id/textView10"
                android:layout_alignTop="@+id/textView5" />

            <Button
                android:text="详细信息"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="37dp"
                android:id="@+id/btn_chengzi" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
