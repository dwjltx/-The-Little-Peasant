<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.myapp67.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/caodi"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="111dp">

        <TextView
            android:text="欢迎来到飞哥哥的农场"
            android:textSize="30dp"
            android:textColor="#4455aa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/zhuye_1"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:text="学号:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#338844"
            android:id="@+id/t_user"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/e_user"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:text="密码:"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#338844"
            android:id="@+id/t_password"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/e_password"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_weight="0.07"
        android:orientation="horizontal">



        <Button
            android:text="确定"
            android:textSize="20dp"
            android:background="#777777"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/queding"
            android:layout_weight="0.92" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.59"
        android:layout_height="40dp">

    </LinearLayout>

    <TextView
        android:text="123登录即代表愿意加入我的农场"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#44aa56"
        android:id="@+id/textView10" />


</LinearLayout>
